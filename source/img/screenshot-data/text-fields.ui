<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <object class="GtkBox" id="widget">
    <property name="spacing">12</property>
    <property name="margin-top">18</property>
    <property name="margin-bottom">18</property>
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkBox">
        <property name="spacing">12</property>
        <child>
          <object class="GtkEntry">
            <property name="placeholder-text">Enter address…</property>
            <property name="secondary-icon-name">edit-copy-symbolic</property>
            <property name="hexpand">true</property>
          </object>
        </child>
        <child>
          <object class="GtkEntry">
            <property name="placeholder-text">Write a message…</property>
            <property name="secondary-icon-name">emoji-people-symbolic</property>
            <property name="hexpand">true</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <style>
          <class name="linked"/>
        </style>
        <child>
          <object class="GtkEntry">
            <property name="placeholder-text">Name</property>
          </object>
        </child>
        <child>
          <object class="GtkEntry">
            <property name="placeholder-text">Street</property>
          </object>
        </child>
        <child>
          <object class="GtkEntry">
            <property name="placeholder-text">City</property>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
